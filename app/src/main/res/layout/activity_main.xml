<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tus datos"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:textColor="@android:color/holo_red_dark" android:textSize="24sp"
            android:layout_marginTop="16dp" android:id="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUsuario"
            android:hint="Ingresa tu Usuario" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/etContrasena"
            android:hint="Ingresa tu contraseÃ±a" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsuario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="97dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="101dp"/>
    <Button
            android:text="Iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIniciar" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/etContrasena" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp"/>

</android.support.constraint.ConstraintLayout>